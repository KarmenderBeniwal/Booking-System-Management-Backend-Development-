/* Apply specific style to QScrollArea when it's hovered */
QScrollArea:hover {
    border: 1px solid darkblue;
}

/* Apply specific style to QScrollArea when it's pressed */
QScrollArea:pressed {
    border: 1px solid darkblue;
}

/* Apply specific style to QScrollArea when it's disabled */
QScrollArea:disabled {
    border: 1px solid lightgray;
}

/* Apply specific style to QScrollArea when it's enabled */
QScrollArea:enabled {
    border: 1px solid lightblue;
