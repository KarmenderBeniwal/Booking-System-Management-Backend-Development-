/* Apply specific style to QWidget */
QWidget {
    background-color: lightgray;
}

/* Apply specific style to QLabel */
QLabel {
    color: darkblue;
}

/* Apply specific style to QLineEdit */
QLineEdit {
    background-color: black;
    border: 1px solid lightblue;
    border-radius: 5px;
    padding: 5px;
}

/* Apply specific style to QPushButton when hovered */
QPushButton:hover {
    background-color: darkblue;
    color: black;k
}

/* Apply specific style to QPushButton when disabled */
QPushButton:disabled {
    background-color: lightgray;
    color: black;
}

/* Apply specific style to QPushButton when enabled */
QPushButton:enabled {
    background-color: lightblue;
    color: black;
}

/* Apply specific style to QComboBox when it's hovered */
QComboBox:hover {
    background-color: darkblue;
    color: black;
}

/* Apply specific style to QComboBox when it's pressed */
QComboBox:pressed {
    background-color: blue;
    color: black;
}

/* Apply specific style to QComboBox when it's disabled */
QComboBox:disabled {
    background-color: lightgray;
    color: gray;
}

/* Apply specific style to QComboBox when it's enabled */
QComboBox:enabled {
    background-color: lightblue;
    color: black;
}

